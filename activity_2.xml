<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030935"
    android:orientation="vertical">


    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0935e7"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginBottom="20dp"
        android:id="@+id/im1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@id/im1"
        android:id="@+id/lin1"
        >

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_foreground"
            android:background="#0ac0ed"
            android:layout_marginRight="5dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#31f726"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#0ac0ed"
            android:src="@drawable/ic_launcher_foreground"/>

    </LinearLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/lin2"
        android:layout_below="@id/lin1">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#ffb331"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_launcher_foreground"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#d25fff"
            android:layout_marginRight="5dp"

            android:src="@drawable/ic_launcher_foreground"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#ff2aa6"
            android:src="@drawable/ic_launcher_foreground"/>
    </LinearLayout>

    <ImageButton

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#63f455"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginBottom="20dp"
        android:id="@+id/im2"
        android:layout_below="@id/lin2"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#2ae2ef"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/im2"
        android:id="@+id/im3"/>
</LinearLayout>